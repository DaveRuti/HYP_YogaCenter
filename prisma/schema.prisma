generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//db schema model

enum ActivityType {
  YOGA
  MEDITATION
  PILATES
  SEMINAR
}

model Activity {
  id            Int             @id @default(autoincrement())
  title         String          @unique
  description   String
  date          ActivityDate[]
  image         ActivityImage[] // array of urls
  isHighlighted Boolean         @default(false)
  type          ActivityType

  Teach Teach[]
}

//da capire come gestire le immagini da salvare
model ActivityImage {
  id         Int      @id @default(autoincrement())
  url        String
  activity   Activity @relation(fields: [activityId], references: [id])
  activityId Int
}

model TeacherImage {
  id        Int     @id @default(autoincrement())
  url       String
  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
}

//da capire come gestire le date
model ActivityDate {
  id         Int      @id @default(autoincrement())
  data       DateTime
  activityId Int
  activity   Activity @relation(fields: [activityId], references: [id])
}

model Teacher {
  id          Int            @id @default(autoincrement())
  name        String         @unique
  surname     String
  description String
  image       TeacherImage[]
  teach       Teach[]
}

model Teach {
  teacherId  Int
  activityId Int

  teacher  Teacher  @relation(fields: [teacherId], references: [id])
  activity Activity @relation(fields: [activityId], references: [id])

  @@id([activityId, teacherId])
}
